@model EXercises.Models.Movies

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
   <li>Genre: @Model.GenreMovies.Name</li>

    @if (Model.ReleaseDate != null || Model.DateAdded != null)
    {
        <li>
            Released Date : @Model.ReleaseDate.ToString("dddd,MMMM d yyyy")
        </li>
        <li>
            Added Time : @Model.DateAdded.ToString("dddd,MMMM d yyyy")

        </li>

}
    <li>Number Of Stock : @Model.GenreMovies</li>

</ul>